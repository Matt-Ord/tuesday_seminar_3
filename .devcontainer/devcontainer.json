{
    "name": "Debian",
    "image": "mcr.microsoft.com/devcontainers/base:bookworm",
    "features": {
        "ghcr.io/devcontainers/features/rust:1": {
            "version": "latest",
            "profile": "default"
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.fixAll": "always"
                },
                "tinymist.lint.enabled": true,
                "tinymist.exportPdf": "onSave"
            },
            "extensions": [
                "myriad-dreamin.tinymist",
                "astral-sh.ty",
                "charliermarsh.ruff"
            ]
        }
    },
    "onCreateCommand": "sudo apt-get update && sudo apt-get install fontconfig pkg-config -y && cargo install --locked typst-cli && sudo mkdir -p /usr/share/fonts/custom && sudo cp fonts/* /usr/share/fonts/custom/ && sudo fc-cache -fv"
}